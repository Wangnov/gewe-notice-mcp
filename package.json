{
  "name": "gewe-notice-mcp",
  "version": "0.0.2",
  "description": "一个轻量级的 MCP 服务器，用于通过gewe微信机器人发送 AI 任务状态通知",
  "main": "index.js",
  "bin": {
    "gewe-notice-mcp": "./index.js"
  },
  "scripts": {
    "postinstall": "node scripts/install.js",
    "build": "cargo build --release",
    "test": "cargo test",
    "lint": "cargo clippy --all-targets --all-features -- -D warnings",
    "fmt": "cargo fmt --all",
    "fmt:check": "cargo fmt --all -- --check",
    "check": "npm run fmt:check && npm run lint && npm run test",
    "fix": "cargo fmt --all && cargo clippy --all-targets --all-features --fix",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "version:set": "node scripts/bump-version.js set",
    "release": "npm run check && npm run version:patch",
    "release:minor": "npm run check && npm run version:minor",
    "release:major": "npm run check && npm run version:major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangnov/gewe-notice-mcp.git"
  },
  "keywords": [
    "mcp",
    "ai",
    "notification",
    "gewe",
    "wechat",
    "rust"
  ],
  "author": "wangnov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wangnov/gewe-notice-mcp/issues"
  },
  "homepage": "https://github.com/wangnov/gewe-notice-mcp#readme",
  "files": [
    "scripts/",
    "index.js",
    "README.md"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "optionalDependencies": {
    "gewe-notice-mcp-darwin-x64": "0.0.2",
    "gewe-notice-mcp-darwin-arm64": "0.0.2",
    "gewe-notice-mcp-linux-x64": "0.0.2",
    "gewe-notice-mcp-win32-x64": "0.0.2"
  }
}
